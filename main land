  <script>
    // Welcome Code for Landing Page
    const welcomeCodes = [
      `print("Welcome to Codeer.org! Write your code here.") # Python`,
      `console.log("Welcome to Codeer.org! Write your code here."); // JavaScript`,
      `public class Main {\n    public static void main(String[] args) {\n        System.out.println("Welcome to Codeer.org! Write your code here.");\n    }\n} // Java`,
      `#include <stdio.h>\nint main() {\n    printf("Welcome to Codeer.org! Write your code here.\\n");\n    return 0;\n} // C`,
    ];

    // Type animation for the welcome code
    let currentCodeIndex = 0;
    let isErasing = false;
    let charIndex = 0;
    let typeTimeout;
    const welcomeCodePre = document.getElementById('welcome-code');
    
    function typeCode() {
      clearTimeout(typeTimeout);
      
      const currentCode = welcomeCodes[currentCodeIndex];
      
      if (!isErasing && charIndex <= currentCode.length) {
        welcomeCodePre.innerHTML = currentCode.substring(0, charIndex) + '<span class="text-primary">|</span>';
        charIndex++;
        typeTimeout = setTimeout(typeCode, charIndex === currentCode.length ? 3000 : 50);
      } else if (!isErasing && charIndex > currentCode.length) {
        isErasing = true;
        typeTimeout = setTimeout(typeCode, 1000);
      } else if (isErasing && charIndex >= 0) {
        welcomeCodePre.innerHTML = currentCode.substring(0, charIndex) + '<span class="text-primary">|</span>';
        charIndex--;
        typeTimeout = setTimeout(typeCode, 20);
      } else if (isErasing && charIndex < 0) {
        isErasing = false;
        currentCodeIndex = (currentCodeIndex + 1) % welcomeCodes.length;
        charIndex = 0;
        typeTimeout = setTimeout(typeCode, 500);
      }
    }

    // Stats counter animation
    function animateCounters() {
      document.querySelectorAll('.counter-value').forEach(counter => {
        const target = +counter.getAttribute('data-target');
        let count = 0;
        const increment = Math.ceil(target / 70);
        
        function updateCount() {
          if (count < target) {
            count += increment;
            counter.innerText = count > target ? target : count;
            requestAnimationFrame(updateCount);
          } else {
            counter.innerText = target;
          }
        }
        
        updateCount();
      });
    }

    // Mobile menu toggle
    document.querySelector('.md\\:hidden').addEventListener('click', () => {
      // Mobile menu implementation
      const mobileMenu = document.createElement('div');
      mobileMenu.className = 'fixed inset-0 bg-darker z-50 flex flex-col items-center justify-center';
      mobileMenu.innerHTML = `
        <button class="absolute top-4 right-6 text-white text-2xl">
          <i class="fas fa-times"></i>
        </button>
        <div class="flex flex-col items-center gap-6 text-lg">
          <a href="#features" class="text-white hover:text-primary">Features</a>
          <a href="#languages" class="text-white hover:text-primary">Languages</a>
          <a href="#freetools" class="text-white hover:text-primary">Free Tools</a>
          <button class="btn-primary py-2 px-6 rounded-lg mt-4">Start Coding</button>
        </div>
      `;
      document.body.appendChild(mobileMenu);
      
      // Close menu
      mobileMenu.querySelector('button').addEventListener('click', () => {
        document.body.removeChild(mobileMenu);
      });
      
      // Menu links scroll
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          document.body.removeChild(mobileMenu);
        });
      });
      
      // Start coding button
      mobileMenu.querySelector('.btn-primary').addEventListener('click', () => {
        document.body.removeChild(mobileMenu);
        navigateToCompilerPage();
      });
    });

    // Smooth scrolling for navigation links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      });
    });

    // Navigate to compiler page
    function navigateToCompilerPage() {
      document.getElementById('landing-page').classList.add('hidden');
      document.getElementById('compiler-page').classList.remove('hidden');
      
      // Initialize CodeMirror editor if needed
      if (typeof editor === 'undefined' && typeof CodeMirror !== 'undefined') {
        initializeEditor();
      } else if (typeof editor !== 'undefined') {
        editor.refresh();
      }
    }

    // Initialize editor function
    function initializeEditor() {
      // This will be defined in your compiler page code
      if (typeof CodeMirror !== 'undefined' && document.getElementById('code-editor')) {
        editor = CodeMirror.fromTextArea(document.getElementById('code-editor'), {
          lineNumbers: true,
          mode: 'javascript',
          theme: 'monokai',
          lineWrapping: true,
          autofocus: true,
          tabSize: 2,
          matchBrackets: true,
          autoCloseBrackets: true,
          styleActiveLine: true,
          indentUnit: 4
        });
      }
    }

 // Define the function to navigate to compiler.html
 function navigateToCompilerPage() {
    window.location.href = 'compiler.html';
  }

  // Set up "Start Coding" buttons
  document.querySelectorAll('#start-coding, #nav-start-coding, #free-start-coding').forEach(button => {
    button.addEventListener('click', navigateToCompilerPage);
  });

    // Initialize animations and interactions on page load
    document.addEventListener('DOMContentLoaded', () => {
      // Start counter animation when in viewport
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            animateCounters();
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.5 });
      
      const countersSection = document.querySelector('.counter-value');
      if (countersSection) observer.observe(countersSection);
      
      // Language card hover effects
      document.querySelectorAll('.language-card').forEach(card => {
        card.addEventListener('mouseenter', () => {
          card.style.transform = 'translateY(-10px)';
        });
        
        card.addEventListener('mouseleave', () => {
          card.style.transform = '';
        });
      });
      
      // Code typing effect for the hero section
      const codeTyping = document.querySelector('.code-typing');
      if (codeTyping) {
        let lines = codeTyping.querySelectorAll('div');
        
        // Start with all lines hidden except the first
        for (let i = 1; i < lines.length; i++) {
          lines[i].style.opacity = '0';
          lines[i].style.transform = 'translateY(10px)';
          lines[i].style.transition = 'all 0.3s ease';
        }
        
        let currentLine = 0;
        
        function revealNextLine() {
          if (currentLine < lines.length) {
            lines[currentLine].style.opacity = '1';
            lines[currentLine].style.transform = 'translateY(0)';
            currentLine++;
            setTimeout(revealNextLine, 200);
          }
        }
        
        // Start the animation after a short delay
        setTimeout(revealNextLine, 500);
      }
      
      // Add a glow effect to CTA buttons on hover
      document.querySelectorAll('.btn-primary').forEach(btn => {
        btn.addEventListener('mouseenter', () => {
          btn.style.boxShadow = '0 0 15px rgba(16, 185, 129, 0.5)';
        });
        
        btn.addEventListener('mouseleave', () => {
          btn.style.boxShadow = '';
        });
      });
    });
  </script>
<!-- Code injected by live-server -->
<script>
	// <![CDATA[  <-- For SVG support
	if ('WebSocket' in window) {
		(function () {
			function refreshCSS() {
				var sheets = [].slice.call(document.getElementsByTagName("link"));
				var head = document.getElementsByTagName("head")[0];
				for (var i = 0; i < sheets.length; ++i) {
					var elem = sheets[i];
					var parent = elem.parentElement || head;
					parent.removeChild(elem);
					var rel = elem.rel;
					if (elem.href && typeof rel != "string" || rel.length == 0 || rel.toLowerCase() == "stylesheet") {
						var url = elem.href.replace(/(&|\?)_cacheOverride=\d+/, '');
						elem.href = url + (url.indexOf('?') >= 0 ? '&' : '?') + '_cacheOverride=' + (new Date().valueOf());
					}
					parent.appendChild(elem);
				}
			}
			var protocol = window.location.protocol === 'http:' ? 'ws://' : 'wss://';
			var address = protocol + window.location.host + window.location.pathname + '/ws';
			var socket = new WebSocket(address);
			socket.onmessage = function (msg) {
				if (msg.data == 'reload') window.location.reload();
				else if (msg.data == 'refreshcss') refreshCSS();
			};
			if (sessionStorage && !sessionStorage.getItem('IsThisFirstTime_Log_From_LiveServer')) {
				console.log('Live reload enabled.');
				sessionStorage.setItem('IsThisFirstTime_Log_From_LiveServer', true);
			}
		})();
	}
	else {
		console.error('Upgrade your browser. This Browser is NOT supported WebSocket for Live-Reloading.');
	}
	// ]]>
</script>

</body></html>
